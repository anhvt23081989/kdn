<div class="auth-page">
  <div class="auth-page-wrapper">
    <div class="auth-page-content">
      <div class="auth-card">
        <!-- Logo/Brand -->
        <div class="auth-brand text-center mb-4">
          <a href="<%= root_path %>" class="logo logo-dark">
            <span class="logo-lg">
              <span class="logo-text text-3xl font-bold text-white">HUGE</span>
            </span>
          </a>
        </div>

        <!-- Title -->
        <div class="text-center mb-4">
          <h4 class="auth-title">Đăng nhập Admin</h4>
          <p class="auth-subtitle">Vui lòng đăng nhập để truy cập trang quản trị</p>
        </div>

        <!-- Form -->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
          <%= render "admin_users/shared/error_messages", resource: resource %>

          <div class="form-group mb-3">
            <%= f.label :email, "Email", class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-email-outline"></i>
              </span>
              <%= f.email_field :email, 
                    autofocus: true, 
                    autocomplete: "email",
                    placeholder: "Email quản trị viên",
                    class: "form-control" %>
            </div>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password, "Mật khẩu", class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-lock-outline"></i>
              </span>
              <%= f.password_field :password, 
                    autocomplete: "current-password",
                    placeholder: "Nhập mật khẩu",
                    class: "form-control" %>
            </div>
          </div>

          <div class="form-group mb-3">
            <div class="d-flex justify-content-between align-items-center">
              <% if devise_mapping.rememberable? %>
                <div class="form-check">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, "Ghi nhớ đăng nhập", class: "form-check-label" %>
                </div>
              <% end %>
              <div>
                <%= link_to "Quên mật khẩu?", new_password_path(resource_name), class: "text-muted ms-1" %>
              </div>
            </div>
          </div>

          <div class="form-group mb-0">
            <%= f.submit "Đăng nhập", class: "btn btn-primary w-100" %>
          </div>
        <% end %>

        <!-- Footer -->
        <div class="text-center mt-4">
          <p class="text-muted">
            <%= link_to "← Quay lại trang chủ", root_path, class: "text-primary fw-semibold" %>
          </p>
        </div>
      </div>

      <!-- Footer Links -->
      <div class="auth-footer text-center">
        <p class="text-muted">
          © <%= Date.current.year %> HUGE Admin. Bản quyền thuộc về Công ty Cổ phần SMART BKG
        </p>
      </div>
    </div>
  </div>
</div>
