<div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-all duration-300 group">
  <div class="relative overflow-hidden">
    <% if product.images.attached? %>
      <%= link_to product_path(product.slug) do %>
        <%= image_tag product.images.first, class: "w-full h-48 md:h-56 object-cover group-hover:scale-105 transition-transform duration-300" %>
      <% end %>
    <% else %>
      <div class="w-full h-48 md:h-56 bg-gray-100 flex items-center justify-center">
        <span class="text-gray-400 text-sm">Không có ảnh</span>
      </div>
    <% end %>
    <% if product.is_new? %>
      <span class="absolute top-2 right-2 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded">NEW</span>
    <% end %>
  </div>
  <div class="p-4">
    <h3 class="font-semibold text-sm md:text-base mb-2 line-clamp-2 min-h-[3rem]">
      <%= link_to product.name, product_path(product.slug), class: "hover:text-blue-600 text-gray-800 transition-colors" %>
    </h3>
    <% if product.sku.present? %>
      <p class="text-gray-500 text-xs font-mono">SKU: <%= product.sku %></p>
    <% end %>
  </div>
</div>

