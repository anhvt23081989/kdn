<!-- Featured News Section -->
<% if @latest_posts.any? %>
  <section class="bg-white py-8">
    <div class="container mx-auto px-4">
      <div class="text-center mb-8">
        <h2 class="text-2xl font-bold text-gray-800"><%= t('home.featured_news') %></h2>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <% @latest_posts.each do |post| %>
          <article class="bg-gray-50 rounded-lg overflow-hidden hover:shadow-md transition-all duration-300">
            <% if post.cover.attached? %>
              <%= link_to post_path(post.slug), class: "block" do %>
                <div class="image-cover" style="padding-top: 56%; position: relative; overflow: hidden;">
                  <%= image_tag post.cover, class: "absolute inset-0 w-full h-full object-cover" %>
                </div>
              <% end %>
            <% else %>
              <div class="w-full" style="padding-top: 56%; background: #f1f1f1; position: relative;">
                <span class="absolute inset-0 flex items-center justify-center text-gray-400 text-sm">Không có ảnh</span>
              </div>
            <% end %>
            <div class="p-3 text-left" style="background-color: rgb(241, 241, 241);">
              <h3 class="font-semibold text-base mb-2 line-clamp-2">
                <%= link_to post.title, post_path(post.slug), class: "hover:text-blue-600 text-gray-800 transition-colors" %>
              </h3>
              <div class="is-divider border-t border-gray-300 my-2"></div>
              <% if post.excerpt.present? %>
                <p class="text-gray-600 text-sm line-clamp-2"><%= truncate(post.excerpt, length: 80) %></p>
              <% end %>
            </div>
          </article>
        <% end %>
      </div>
    </div>
  </section>
<% end %>
