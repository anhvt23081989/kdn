<div class="auth-page">
  <div class="auth-page-wrapper">
    <div class="auth-page-content">
      <div class="auth-card">
        <!-- Logo/Brand -->
        <div class="auth-brand text-center mb-4">
          <a href="<%= root_path %>" class="logo logo-dark">
            <%= image_tag "logo.jpg", alt: "TARIN", class: "logo-image", style: "max-height: 60px; width: auto;" %>
          </a>
        </div>

        <!-- Title -->
        <div class="text-center mb-4">
          <h4 class="auth-title"><%= t('auth.register') %></h4>
          <p class="auth-subtitle"><%= t('auth.create_account') %></p>
        </div>
        
        <!-- Language Switcher -->
        <div class="text-center mb-4">
          <%= render 'shared/language_switcher' %>
        </div>

        <!-- Alert Messages -->
        <% if alert.present? %>
          <div class="alert alert-danger mb-3" role="alert">
            <%= alert %>
          </div>
        <% end %>
        
        <% if notice.present? %>
          <div class="alert alert-success mb-3" role="alert">
            <%= notice %>
          </div>
        <% end %>

        <!-- Form -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="form-group mb-3">
            <%= f.label :email, t('form.email'), class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-email-outline"></i>
              </span>
              <%= f.email_field :email, 
                    autofocus: true, 
                    autocomplete: "email",
                    placeholder: t('form.enter_email'),
                    class: "form-control" %>
            </div>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password, t('form.password'), class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-lock-outline"></i>
              </span>
              <%= f.password_field :password, 
                    autocomplete: "new-password",
                    placeholder: t('form.enter_new_password_placeholder', min: @minimum_password_length || 6),
                    class: "form-control" %>
            </div>
            <% if @minimum_password_length %>
              <small class="form-text text-muted"><%= t('form.password_min_length', min: @minimum_password_length) %></small>
            <% end %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password_confirmation, t('form.password_confirmation'), class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-lock-check-outline"></i>
              </span>
              <%= f.password_field :password_confirmation, 
                    autocomplete: "new-password",
                    placeholder: t('form.enter_password_confirmation'),
                    class: "form-control" %>
            </div>
          </div>

          <div class="form-group mb-0">
            <%= f.submit t('auth.signup'), class: "btn btn-primary w-100" %>
          </div>
        <% end %>
        
        <!-- Info about email confirmation -->
        <div class="alert alert-info mt-3" role="alert">
          <small>
            <i class="mdi mdi-information-outline"></i>
            <%= t('auth.confirmation_sent') %>
          </small>
        </div>

        <!-- Footer -->
        <div class="text-center mt-4">
          <p class="text-muted">
            <%= t('auth.have_account') %>
            <%= link_to t('auth.login_now'), new_session_path(resource_name), class: "text-primary fw-semibold" %>
          </p>
        </div>
      </div>

      <!-- Footer Links -->
      <div class="auth-footer text-center">
        <p class="text-muted">
          <%= t('footer.copyright_text', year: Date.current.year) %>
        </p>
      </div>
    </div>
  </div>
</div>
