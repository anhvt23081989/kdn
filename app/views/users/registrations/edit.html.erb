<div class="auth-page">
  <div class="auth-page-wrapper">
    <div class="auth-page-content">
      <div class="auth-card">
        <!-- Logo/Brand -->
        <div class="auth-brand text-center mb-4">
          <a href="<%= root_path %>" class="logo logo-dark">
            <%= image_tag "logo.jpg", alt: "KDN", class: "logo-image", style: "max-height: 60px; width: auto;" %>
          </a>
        </div>

        <!-- Title -->
        <div class="text-center mb-4">
          <h4 class="auth-title"><%= t('auth.edit_account') %></h4>
          <p class="auth-subtitle"><%= t('auth.update_account') %></p>
        </div>
        
        <!-- Language Switcher -->
        <div class="text-center mb-4">
          <%= render 'shared/language_switcher' %>
        </div>

        <!-- Form -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch, class: "auth-form" }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="form-group mb-3">
            <%= f.label :email, t('form.email'), class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-email-outline"></i>
              </span>
              <%= f.email_field :email, 
                    autofocus: true, 
                    autocomplete: "email",
                    class: "form-control" %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="alert alert-warning">
              <i class="mdi mdi-alert-outline me-2"></i>
              Đang chờ xác nhận cho: <strong><%= resource.unconfirmed_email %></strong>
            </div>
          <% end %>

          <div class="form-group mb-3">
            <%= f.label :password, t('form.new_password'), class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-lock-outline"></i>
              </span>
              <%= f.password_field :password, 
                    autocomplete: "new-password",
                    placeholder: t('form.password_leave_blank'),
                    class: "form-control" %>
            </div>
            <% if @minimum_password_length %>
              <small class="form-text text-muted"><%= t('form.password_min_length', min: @minimum_password_length) %> (<%= t('form.password_leave_blank') %>)</small>
            <% end %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password_confirmation, t('form.confirm_new_password'), class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-lock-check-outline"></i>
              </span>
              <%= f.password_field :password_confirmation, 
                    autocomplete: "new-password",
                    placeholder: t('form.enter_password_confirmation'),
                    class: "form-control" %>
            </div>
          </div>

          <div class="form-group mb-3">
            <%= f.label :current_password, t('form.current_password'), class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-lock-alert-outline"></i>
              </span>
              <%= f.password_field :current_password, 
                    autocomplete: "current-password",
                    placeholder: t('form.password_required'),
                    class: "form-control" %>
            </div>
            <small class="form-text text-muted"><%= t('form.password_required') %></small>
          </div>

          <div class="form-group mb-0">
            <%= f.submit t('form.update'), class: "btn btn-primary w-100" %>
          </div>
        <% end %>

        <!-- Cancel Account -->
        <div class="text-center mt-4">
          <p class="text-muted mb-2">Không hài lòng?</p>
          <%= link_to "Hủy tài khoản", registration_path(resource_name), 
                data: { confirm: "Bạn có chắc chắn muốn hủy tài khoản? Hành động này không thể hoàn tác." }, 
                method: :delete, 
                class: "btn btn-link text-danger" %>
        </div>
      </div>

      <!-- Footer Links -->
      <div class="auth-footer text-center">
        <p class="text-muted">
          <%= t('footer.copyright_text', year: Date.current.year) %>
        </p>
      </div>
    </div>
  </div>
</div>
