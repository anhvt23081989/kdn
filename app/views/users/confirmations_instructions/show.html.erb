<div class="auth-page">
  <div class="auth-page-wrapper">
    <div class="auth-page-content">
      <div class="auth-card">
        <!-- Logo/Brand -->
        <div class="auth-brand text-center mb-4">
          <a href="<%= root_path %>" class="logo logo-dark">
            <%= image_tag "logo.jpg", alt: "KDN", class: "logo-image", style: "max-height: 60px; width: auto;" %>
          </a>
        </div>

        <!-- Title -->
        <div class="text-center mb-4">
          <h4 class="auth-title"><%= t('auth.confirmation_instructions_title') %></h4>
          <p class="auth-subtitle"><%= t('auth.confirmation_instructions_subtitle') %></p>
        </div>
        
        <!-- Language Switcher -->
        <div class="text-center mb-4">
          <%= render 'shared/language_switcher' %>
        </div>

        <!-- Instructions -->
        <div class="alert alert-info mb-4" role="alert">
          <div class="d-flex align-items-start">
            <i class="mdi mdi-information-outline me-2" style="font-size: 24px;"></i>
            <div>
              <h5 class="alert-heading mb-2"><%= t('auth.check_your_email') %></h5>
              <% if @email.present? %>
                <p class="mb-2"><%= t('auth.confirmation_email_sent_to', email: @email) %></p>
              <% else %>
                <p class="mb-2"><%= t('auth.confirmation_email_sent') %></p>
              <% end %>
              <p class="mb-0"><%= t('auth.click_confirmation_link') %></p>
            </div>
          </div>
        </div>

        <!-- Steps -->
        <div class="mb-4">
          <h6 class="mb-3"><%= t('auth.confirmation_steps_title') %></h6>
          <ol class="list-group list-group-numbered">
            <li class="list-group-item d-flex align-items-start">
              <div class="ms-2 me-auto">
                <div class="fw-bold"><%= t('auth.step1_title') %></div>
                <%= t('auth.step1_description') %>
              </div>
            </li>
            <li class="list-group-item d-flex align-items-start">
              <div class="ms-2 me-auto">
                <div class="fw-bold"><%= t('auth.step2_title') %></div>
                <%= t('auth.step2_description') %>
              </div>
            </li>
            <li class="list-group-item d-flex align-items-start">
              <div class="ms-2 me-auto">
                <div class="fw-bold"><%= t('auth.step3_title') %></div>
                <%= t('auth.step3_description') %>
              </div>
            </li>
          </ol>
        </div>

        <!-- Resend confirmation -->
        <div class="mb-4">
          <p class="text-muted mb-2"><%= t('auth.didnt_receive_email') %></p>
          <%= link_to t('auth.resend_confirmation'), new_user_confirmation_path, class: "btn btn-outline-primary w-100" %>
        </div>

        <!-- Footer -->
        <div class="text-center mt-4">
          <p class="text-muted">
            <%= t('auth.have_account') %>
            <%= link_to t('auth.login_now'), new_user_session_path, class: "text-primary fw-semibold" %>
          </p>
        </div>
      </div>

      <!-- Footer Links -->
      <div class="auth-footer text-center">
        <p class="text-muted">
          <%= t('footer.copyright_text', year: Date.current.year) %>
        </p>
      </div>
    </div>
  </div>
</div>

