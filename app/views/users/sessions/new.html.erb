<div class="auth-page">
  <div class="auth-page-wrapper">
    <div class="auth-page-content">
      <div class="auth-card">
        <!-- Logo/Brand -->
        <div class="auth-brand text-center mb-4">
          <a href="<%= root_path %>" class="logo logo-dark">
            <%= image_tag "logo.jpg", alt: "TARIN", class: "logo-image", style: "max-height: 60px; width: auto;" %>
          </a>
        </div>

        <!-- Title -->
        <div class="text-center mb-4">
          <h4 class="auth-title"><%= t('auth.login') %></h4>
          <p class="auth-subtitle"><%= t('auth.welcome_back') %></p>
        </div>
        
        <!-- Language Switcher -->
        <div class="text-center mb-4">
          <%= render 'shared/language_switcher' %>
        </div>

        <!-- Alert Messages -->
        <% if alert.present? %>
          <div class="alert alert-danger mb-3" role="alert">
            <div class="d-flex align-items-start">
              <i class="mdi mdi-alert-circle me-2" style="font-size: 20px;"></i>
              <div class="flex-grow-1">
                <%= alert %>
                <% if flash[:email].present? || (resource && resource.email.present?) %>
                  <div class="mt-2">
                    <%= link_to t('auth.resend_confirmation'), new_user_confirmation_path(email: flash[:email] || resource.email), class: "btn btn-sm btn-outline-primary" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
        
        <% if notice.present? %>
          <div class="alert alert-success mb-3" role="alert">
            <%= notice %>
          </div>
        <% end %>

        <!-- Form -->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="form-group mb-3">
            <%= f.label :email, t('form.email'), class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-email-outline"></i>
              </span>
              <%= f.email_field :email, 
                    autofocus: true, 
                    autocomplete: "email",
                    placeholder: t('form.enter_email'),
                    class: "form-control" %>
            </div>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password, t('form.password'), class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-lock-outline"></i>
              </span>
              <%= f.password_field :password, 
                    autocomplete: "current-password",
                    placeholder: t('form.enter_password'),
                    class: "form-control" %>
            </div>
          </div>

          <div class="form-group mb-3">
            <div class="d-flex justify-content-between align-items-center">
              <% if devise_mapping.rememberable? %>
                <div class="form-check">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, t('auth.remember_me'), class: "form-check-label" %>
                </div>
              <% end %>
              <div>
                <%= link_to t('auth.forgot_password'), new_password_path(resource_name), class: "text-muted ms-1" %>
              </div>
            </div>
          </div>

          <div class="form-group mb-0">
            <%= f.submit t('auth.login'), class: "btn btn-primary w-100" %>
          </div>
        <% end %>

        <!-- Footer -->
        <div class="text-center mt-4">
          <p class="text-muted">
            <%= t('auth.no_account') %>
            <%= link_to t('auth.signup_now'), new_registration_path(resource_name), class: "text-primary fw-semibold" %>
          </p>
        </div>
      </div>

      <!-- Footer Links -->
      <div class="auth-footer text-center">
        <p class="text-muted">
          <%= t('footer.copyright_text', year: Date.current.year) %>
        </p>
      </div>
    </div>
  </div>
</div>
