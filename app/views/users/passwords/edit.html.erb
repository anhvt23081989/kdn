<div class="auth-page">
  <div class="auth-page-wrapper">
    <div class="auth-page-content">
      <div class="auth-card">
        <!-- Logo/Brand -->
        <div class="auth-brand text-center mb-4">
          <a href="<%= root_path %>" class="logo logo-dark">
            <span class="logo-lg">
              <span class="logo-text text-3xl font-bold text-white">HUGE</span>
            </span>
          </a>
        </div>

        <!-- Title -->
        <div class="text-center mb-4">
          <h4 class="auth-title">Đặt lại mật khẩu</h4>
          <p class="auth-subtitle">Nhập mật khẩu mới của bạn</p>
        </div>

        <!-- Form -->
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "auth-form" }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group mb-3">
            <%= f.label :password, "Mật khẩu mới", class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-lock-outline"></i>
              </span>
              <%= f.password_field :password, 
                    autofocus: true,
                    autocomplete: "new-password",
                    placeholder: "Tối thiểu #{@minimum_password_length || 6} ký tự",
                    class: "form-control" %>
            </div>
            <% if @minimum_password_length %>
              <small class="form-text text-muted">Mật khẩu tối thiểu <%= @minimum_password_length %> ký tự</small>
            <% end %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password_confirmation, "Xác nhận mật khẩu mới", class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-lock-check-outline"></i>
              </span>
              <%= f.password_field :password_confirmation, 
                    autocomplete: "new-password",
                    placeholder: "Nhập lại mật khẩu mới",
                    class: "form-control" %>
            </div>
          </div>

          <div class="form-group mb-0">
            <%= f.submit "Đặt lại mật khẩu", class: "btn btn-primary w-100" %>
          </div>
        <% end %>

        <!-- Footer -->
        <div class="text-center mt-4">
          <p class="text-muted">
            <%= link_to "Quay lại đăng nhập", new_session_path(resource_name), class: "text-primary fw-semibold" %>
          </p>
        </div>
      </div>

      <!-- Footer Links -->
      <div class="auth-footer text-center">
        <p class="text-muted">
          © <%= Date.current.year %> HUGE. Bản quyền thuộc về Công ty Cổ phần SMART BKG
        </p>
      </div>
    </div>
  </div>
</div>
