<div class="auth-page">
  <div class="auth-page-wrapper">
    <div class="auth-page-content">
      <div class="auth-card">
        <!-- Logo/Brand -->
        <div class="auth-brand text-center mb-4">
          <a href="<%= root_path %>" class="logo logo-dark">
            <%= image_tag "logo.jpg", alt: "KDN", class: "logo-image", style: "max-height: 60px; width: auto;" %>
          </a>
        </div>

        <!-- Title -->
        <div class="text-center mb-4">
          <h4 class="auth-title"><%= t('auth.reset_password') %></h4>
          <p class="auth-subtitle"><%= t('auth.enter_new_password') %></p>
        </div>
        
        <!-- Language Switcher -->
        <div class="text-center mb-4">
          <%= render 'shared/language_switcher' %>
        </div>

        <!-- Form -->
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "auth-form" }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group mb-3">
            <%= f.label :password, t('form.new_password'), class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-lock-outline"></i>
              </span>
              <%= f.password_field :password, 
                    autofocus: true,
                    autocomplete: "new-password",
                    placeholder: t('form.enter_new_password_placeholder', min: @minimum_password_length || 6),
                    class: "form-control" %>
            </div>
            <% if @minimum_password_length %>
              <small class="form-text text-muted"><%= t('form.password_min_length', min: @minimum_password_length) %></small>
            <% end %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password_confirmation, t('form.confirm_new_password'), class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-lock-check-outline"></i>
              </span>
              <%= f.password_field :password_confirmation, 
                    autocomplete: "new-password",
                    placeholder: t('form.enter_password_confirmation'),
                    class: "form-control" %>
            </div>
          </div>

          <div class="form-group mb-0">
            <%= f.submit t('auth.reset_password'), class: "btn btn-primary w-100" %>
          </div>
        <% end %>

        <!-- Footer -->
        <div class="text-center mt-4">
          <p class="text-muted">
            <%= link_to t('auth.back_to_login'), new_session_path(resource_name), class: "text-primary fw-semibold" %>
          </p>
        </div>
      </div>

      <!-- Footer Links -->
      <div class="auth-footer text-center">
        <p class="text-muted">
          <%= t('footer.copyright_text', year: Date.current.year) %>
        </p>
      </div>
    </div>
  </div>
</div>
