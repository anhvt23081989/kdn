<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Video</h1>

  <% if @videos.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @videos.each do |video| %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <div class="aspect-video bg-gray-200">
            <% if video.youtube_url.present? %>
              <% youtube_id = video.youtube_url.match(/(?:youtube\.com\/watch\?v=|youtu\.be\/)([^&\n?#]+)/)&.captures&.first %>
              <% if youtube_id %>
                <iframe 
                  src="https://www.youtube.com/embed/<%= youtube_id %>" 
                  frameborder="0" 
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                  allowfullscreen
                  class="w-full h-full">
                </iframe>
              <% else %>
                <div class="flex items-center justify-center h-full text-gray-500">
                  Video không hợp lệ
                </div>
              <% end %>
            <% else %>
              <div class="flex items-center justify-center h-full text-gray-500">
                Không có video
              </div>
            <% end %>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-lg mb-2"><%= video.title %></h3>
            <% if video.category.present? %>
              <p class="text-sm text-gray-600 mb-2">
                <%= link_to video.category.name, category_path(video.category.slug), 
                    class: "hover:text-blue-600" %>
              </p>
            <% end %>
            <% if video.published_at.present? %>
              <p class="text-gray-400 text-xs"><%= video.published_at.strftime("%d/%m/%Y") %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <% if @pagy.pages > 1 %>
      <div class="mt-8 flex justify-center">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-600">Chưa có video nào.</p>
  <% end %>
</div>

