<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Catalogue</h1>

  <% if @catalogues.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @catalogues.each do |catalogue| %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2"><%= catalogue.title %></h3>
            <% if catalogue.year.present? %>
              <p class="text-gray-600 mb-4">Năm: <span class="font-semibold"><%= catalogue.year %></span></p>
            <% end %>
            <% if catalogue.published_at.present? %>
              <p class="text-gray-500 text-sm mb-4">
                Xuất bản: <%= catalogue.published_at.strftime("%d/%m/%Y") %>
              </p>
            <% end %>
            <div class="mt-4">
              <%= link_to "Xem chi tiết", "#", class: "inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <% if @pagy.pages > 1 %>
      <div class="mt-8 flex justify-center">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-600">Chưa có catalogue nào.</p>
  <% end %>
</div>

