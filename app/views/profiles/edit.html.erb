<div class="auth-page">
  <div class="auth-page-wrapper">
    <div class="auth-page-content">
      <div class="auth-card">
        <!-- Logo/Brand -->
        <div class="auth-brand text-center mb-4">
          <a href="<%= root_path %>" class="logo logo-dark">
            <%= image_tag "logo.jpg", alt: "TARIN", class: "logo-image", style: "max-height: 60px; width: auto;" %>
          </a>
        </div>

        <!-- Title -->
        <div class="text-center mb-4">
          <h4 class="auth-title"><%= t('profiles.edit_profile_title', default: 'Chỉnh sửa thông tin cá nhân') %></h4>
          <p class="auth-subtitle"><%= t('profiles.edit_profile_subtitle', default: 'Cập nhật tên hiển thị và ảnh đại diện của bạn') %></p>
        </div>

        <!-- Alert Messages -->
        <% if alert.present? %>
          <div class="alert alert-danger mb-3" role="alert">
            <%= alert %>
          </div>
        <% end %>
        
        <% if notice.present? %>
          <div class="alert alert-success mb-3" role="alert">
            <%= notice %>
          </div>
        <% end %>

        <!-- Form -->
        <%= form_for(@user, url: profile_path, html: { method: :patch, class: "auth-form", multipart: true }) do |f| %>
          <%= render "users/shared/error_messages", resource: @user %>

          <!-- Avatar Upload -->
          <div class="form-group mb-4 text-center">
            <%= f.label :avatar, t('form.avatar'), class: "form-label block mb-2" %>
            <div class="flex flex-col items-center">
              <% if @user.avatar.attached? %>
                <%= image_tag @user.avatar, alt: user_display_name(@user), class: "w-24 h-24 rounded-full object-cover border-2 border-gray-300 mb-2" %>
              <% else %>
                <div class="w-24 h-24 rounded-full bg-blue-600 flex items-center justify-center text-white font-semibold text-2xl mb-2">
                  <%= (@user.name.presence || @user.email).first.upcase %>
                </div>
              <% end %>
              <%= f.file_field :avatar, accept: "image/*", class: "form-control w-full max-w-xs mx-auto" %>
              <small class="form-text text-muted mt-1"><%= t('form.avatar_hint', default: 'Chọn ảnh đại diện (tối đa 2MB)') %></small>
            </div>
          </div>

          <div class="form-group mb-3">
            <%= f.label :name, t('form.name', default: 'Tên hiển thị'), class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-account-outline"></i>
              </span>
              <%= f.text_field :name, 
                    autofocus: true, 
                    autocomplete: "name",
                    placeholder: t('form.name_placeholder', default: 'Tên sẽ được hiển thị thay cho email'),
                    class: "form-control" %>
            </div>
            <small class="form-text text-muted"><%= t('form.name_hint', default: 'Tên này sẽ được hiển thị thay cho email trong các phần giao diện') %></small>
          </div>

          <div class="form-group mb-3">
            <%= f.label :email, t('form.email'), class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-email-outline"></i>
              </span>
              <%= f.email_field :email, 
                    autocomplete: "email",
                    readonly: true,
                    class: "form-control bg-gray-100" %>
            </div>
            <small class="form-text text-muted"><%= t('form.email_readonly_hint', default: 'Email không thể thay đổi') %></small>
          </div>

          <div class="form-group mb-3">
            <%= f.submit t('common.save'), class: "btn btn-primary w-100" %>
          </div>
        <% end %>

        <div class="text-center mt-4">
          <%= link_to t('common.back'), :back, class: "text-blue-600 hover:text-blue-800" %>
        </div>
      </div>
    </div>
  </div>
</div>

