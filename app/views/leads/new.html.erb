<div class="container mx-auto px-4 py-8 max-w-2xl">
  <h1 class="text-3xl font-bold mb-8">Đăng ký nhận catalogue</h1>

  <%= form_with model: @lead, local: true, class: "bg-white shadow-md rounded-lg px-8 pt-6 pb-8" do |form| %>
    <% if @lead.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold mb-2">Có <%= pluralize(@lead.errors.count, "lỗi") %> xảy ra:</h2>
        <ul class="list-disc list-inside">
          <% @lead.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :name, "Họ và tên *", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true %>
    </div>

    <div class="mb-4">
      <%= form.label :email, "Email *", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true %>
    </div>

    <div class="mb-4">
      <%= form.label :phone, "Số điện thoại *", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.telephone_field :phone, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true %>
    </div>

    <div class="mb-4">
      <%= form.label :address, "Địa chỉ", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :address, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= form.label :message, "Lời nhắn", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_area :message, rows: 4, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <%= form.hidden_field :source, value: "catalogue_form" %>

    <div class="flex items-center justify-between">
      <%= form.submit "Gửi đăng ký", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
      <%= link_to "Hủy", root_path, class: "text-gray-600 hover:text-gray-800" %>
    </div>
  <% end %>
</div>

