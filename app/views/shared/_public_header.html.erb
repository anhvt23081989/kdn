<header class="bg-white shadow-md sticky top-0 z-50">
  <!-- Top Bar -->
  <div class="bg-gray-100 border-b border-gray-200">
    <div class="container mx-auto px-4 py-2">
      <div class="flex items-center justify-between text-sm">
        <div class="flex items-center space-x-4">
          <button onclick="openCatalogueModal()" class="text-blue-600 hover:text-blue-800 cursor-pointer">
            <%= t('header.register_catalogue') %>
          </button>
          <span class="text-gray-400">|</span>
          <span class="text-gray-600"><%= t('header.email') %>: hugevina@gmail.com</span>
        </div>
        <div class="flex items-center space-x-4">
          <span class="font-bold text-blue-600"><%= t('header.slogan') %></span>
          <span class="text-gray-400">|</span>
          <span class="text-gray-600"><%= t('header.hotline') %>: <a href="tel:19000225" class="text-blue-600 hover:underline font-semibold">1900.0225</a></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Navigation -->
  <nav class="container mx-auto px-4">
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <%= link_to root_path do %>
          <%= image_tag "logo.jpg", alt: "TARIN", class: "logo-image h-12 w-auto" %>
        <% end %>
      </div>

      <!-- Search -->
      <div class="flex-1 max-w-md mx-8">
        <form action="<%= products_path %>" method="get" class="relative">
          <input type="text" name="search" placeholder="<%= t('header.search_placeholder') %>" 
                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
          <button type="submit" class="absolute right-2 top-2 text-gray-400 hover:text-gray-600">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </button>
        </form>
      </div>

      <!-- Right Menu -->
      <div class="flex items-center space-x-4">
        <%= render 'shared/language_switcher' %>
        <button onclick="openCatalogueModal()" class="text-gray-700 hover:text-blue-600 cursor-pointer">
          <%= t('menu.catalogue') %>
        </button>
        <div class="text-gray-700 hover:text-blue-600 cursor-pointer">
          <span class="font-bold">0</span>
          <span class="ml-1"><%= t('header.cart') %></span>
        </div>
        <% if user_signed_in? %>
          <!-- User Dropdown -->
          <div class="relative user-dropdown">
            <button onclick="toggleUserDropdown()" class="flex items-center space-x-2 text-gray-700 hover:text-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 rounded-full p-1 transition-all">
              <% if current_user.avatar.attached? %>
                <%= image_tag current_user.avatar, alt: current_user.email, class: "w-8 h-8 rounded-full object-cover border-2 border-gray-300" %>
              <% else %>
                <div class="w-8 h-8 rounded-full bg-blue-600 flex items-center justify-center text-white font-semibold text-sm">
                  <%= current_user.email.first.upcase %>
                </div>
              <% end %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <!-- Dropdown Menu -->
            <div id="userDropdown" class="user-dropdown-menu hidden absolute right-0 mt-2 w-56 bg-white rounded-lg shadow-lg border border-gray-200 py-2 z-50">
              <div class="px-4 py-3 border-b border-gray-200">
                <p class="text-sm font-semibold text-gray-900"><%= current_user.email %></p>
                <p class="text-xs text-gray-500"><%= current_user.role.humanize %></p>
              </div>
              <% if current_user.admin? %>
                <%= link_to admin_root_path, class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors" do %>
                  <svg class="w-5 h-5 mr-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <span><%= t('header.system_settings') %></span>
                <% end %>
              <% end %>
              <%= link_to edit_user_registration_path, class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors" do %>
                <svg class="w-5 h-5 mr-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                <span><%= t('header.edit_profile') %></span>
              <% end %>
              <%= button_to destroy_user_session_path, method: :delete, class: "w-full flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors text-left", form: { class: "w-full" } do %>
                <svg class="w-5 h-5 mr-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
                <span><%= t('auth.logout') %></span>
              <% end %>
            </div>
          </div>
        <% else %>
          <%= link_to t('auth.login'), new_user_session_path, class: "text-gray-700 hover:text-blue-600" %>
        <% end %>
      </div>
    </div>

    <!-- Mega Menu -->
    <%= render 'shared/mega_menu' %>
  </nav>
</header>

