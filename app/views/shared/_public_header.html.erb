<header class="bg-white sticky top-0 z-50">
  <!-- Top Bar (Dark Grey) -->
  <div class="bg-gray-900 text-white">
    <div class="container mx-auto px-4 py-2">
      <div class="flex flex-row items-center">
        <div class="flex-col flex-left flex-1"></div>
        <div class="flex-col flex-center flex-1"></div>
        <div class="flex-col flex-right">
          <ul class="flex items-center space-x-4 text-sm list-none m-0 p-0">
            <li class="html custom">
              <span><%= t('header.email') %>: hugevina@gmail.com</span>
            </li>
            <li class="html header-social-icons ml-0">
              <a href="https://www.facebook.com/nhatamthongminhhuge19000225" target="_blank" rel="noopener noreferrer nofollow" class="w-6 h-6 flex items-center justify-center rounded-full bg-[#155fa0] hover:bg-[#0f4a7a] transition-colors">
                <i class="icon-facebook text-white text-xs"></i>
              </a>
            </li>
            <!-- User Dropdown (if logged in) - Floating overlay -->
          <% if user_signed_in? %>
              <li class="relative user-dropdown">
                <button onclick="toggleUserDropdown()" class="flex items-center space-x-2 bg-white shadow-lg rounded-full p-2 border-2 border-gray-300 hover:border-blue-500 transition-all">
                  <% if current_user.avatar.attached? %>
                    <%= image_tag current_user.avatar, alt: user_display_name(current_user), class: "w-8 h-8 rounded-full object-cover" %>
                  <% else %>
                    <div class="w-8 h-8 rounded-full bg-blue-600 flex items-center justify-center text-white font-semibold text-sm">
                      <%= (current_user.name.presence || current_user.email).first.upcase %>
                    </div>
                  <% end %>                 
                </button>
                <!-- Dropdown Menu -->
                <div id="userDropdown" class="user-dropdown-menu hidden absolute right-0 mt-2 w-56 bg-white rounded-lg shadow-lg border border-gray-200 py-2 z-50">
                  <div class="px-4 py-3 border-b border-gray-200">
                    <p class="text-sm font-semibold text-gray-900"><%= user_display_name(current_user) %></p>
                    <p class="text-xs text-gray-500"><%= current_user.role.humanize %></p>
                  </div>
                  <% if current_user.admin? %>
                    <%= link_to system_settings_menu_path, class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors" do %>
                      <svg class="w-5 h-5 mr-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                      <span><%= t('header.system_settings') %></span>
                    <% end %>
                  <% end %>
                  <%= link_to edit_profile_path, class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors" do %>
                    <svg class="w-5 h-5 mr-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    <span><%= t('header.edit_profile') %></span>
                  <% end %>
                  <%= link_to change_password_path, class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors" do %>
                    <svg class="w-5 h-5 mr-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                    </svg>
                    <span><%= t('header.change_password', default: 'Đổi mật khẩu') %></span>
                  <% end %>
                  <%= button_to destroy_user_session_path, method: :delete, class: "w-full flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors text-left", form: { class: "w-full" } do %>
                    <svg class="w-5 h-5 mr-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                    </svg>
                    <span><%= t('auth.logout') %></span>
                  <% end %>
                </div>
              </li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Middle Bar (White) -->
  <div class="bg-white border-b border-gray-200 header-main">
    <div class="container mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <!-- Logo (Left) -->
        <div class="flex-shrink-0">
          <%= link_to root_path do %>
            <%= image_tag "logo.jpg", alt: "TARIN", class: "logo-image h-16 w-auto" %>
          <% end %>
        </div>

        <!-- Slogan (Center) -->
        <div class="flex-1 text-center">
          <strong class="text-lg font-bold text-gray-800 block" style="text-align:center; display:block;">
            <%= t('header.slogan') %>
          </strong>
        </div>

        <!-- Right Side: Hotline, Search, Catalogue -->
        <div class="flex-shrink-0 flex items-center space-x-4">
          <div class="flex items-center space-x-1">
            <span class="text-gray-700"><%= t('header.hotline') %> :</span>
            <a href="tel:19000225" class="text-red-600 font-bold hover:text-red-700">1900.0225</a>
          </div>
          
          <!-- Search Icon Button -->
          <button onclick="toggleSearch()" class="w-8 h-8 flex items-center justify-center rounded-full bg-[#155fa0] hover:bg-[#0f4a7a] transition-colors">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </button>
          
          <!-- Catalogue Button -->
          <button onclick="openCatalogueModal()" class="btn-outline px-4 py-2" style="border:2px solid #155fa0; border-radius:14px; color:#155fa0; font-weight:600; letter-spacing:1px; cursor:pointer; background:#fff; transition:.2s;">
            <%= t('menu.catalogue') %>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation Bar (Dark Grey) -->
  <nav class="bg-gray-900">
    <div class="container mx-auto px-4">
      <%= render 'shared/mega_menu' %>
    </div>
  </nav>

  
</header>

<!-- Search Modal/Overlay -->
<div id="searchOverlay" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-start justify-center pt-20">
  <div class="bg-white rounded-lg shadow-xl w-full max-w-2xl mx-4">
    <div class="p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-xl font-bold text-gray-900"><%= t('header.search_placeholder', default: 'Tìm kiếm sản phẩm...') %></h3>
        <button onclick="toggleSearch()" class="text-gray-500 hover:text-gray-700">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <form action="<%= products_path %>" method="get" class="relative">
        <input type="text" name="search" placeholder="<%= t('header.search_placeholder', default: 'Tìm kiếm sản phẩm...') %>" 
               class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg"
               autofocus>
        <button type="submit" class="absolute right-3 top-3 text-gray-400 hover:text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </button>
      </form>
    </div>
  </div>
</div>
