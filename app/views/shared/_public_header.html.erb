<header class="bg-white shadow-md sticky top-0 z-50">
  <!-- Top Bar -->
  <div class="bg-gray-100 border-b border-gray-200">
    <div class="container mx-auto px-4 py-2">
      <div class="flex items-center justify-between text-sm">
        <div class="flex items-center space-x-4">
          <button onclick="openCatalogueModal()" class="text-blue-600 hover:text-blue-800 cursor-pointer">
            <%= t('header.register_catalogue') %>
          </button>
          <span class="text-gray-400">|</span>
          <span class="text-gray-600"><%= t('header.email') %>: hugevina@gmail.com</span>
        </div>
        <div class="flex items-center space-x-4">
          <span class="font-bold text-blue-600"><%= t('header.slogan') %></span>
          <span class="text-gray-400">|</span>
          <span class="text-gray-600"><%= t('header.hotline') %>: <a href="tel:19000225" class="text-blue-600 hover:underline font-semibold">1900.0225</a></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Navigation -->
  <nav class="container mx-auto px-4">
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <%= link_to root_path do %>
          <%= image_tag "logo.jpg", alt: "TARIN", class: "h-12 w-auto" %>
        <% end %>
      </div>

      <!-- Search -->
      <div class="flex-1 max-w-md mx-8">
        <form action="<%= products_path %>" method="get" class="relative">
          <input type="text" name="search" placeholder="<%= t('header.search_placeholder') %>" 
                 class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
          <button type="submit" class="absolute right-2 top-2 text-gray-400 hover:text-gray-600">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </button>
        </form>
      </div>

      <!-- Right Menu -->
      <div class="flex items-center space-x-4">
        <%= render 'shared/language_switcher' %>
        <button onclick="openCatalogueModal()" class="text-gray-700 hover:text-blue-600 cursor-pointer">
          <%= t('menu.catalogue') %>
        </button>
        <div class="text-gray-700 hover:text-blue-600 cursor-pointer">
          <span class="font-bold">0</span>
          <span class="ml-1"><%= t('header.cart') %></span>
        </div>
        <% if user_signed_in? %>
          <%= button_to t('auth.logout'), destroy_user_session_path, method: :delete, class: "text-gray-700 hover:text-blue-600 bg-transparent border-none cursor-pointer p-0 font-normal", form: { class: "inline", style: "display: inline;" } %>
        <% else %>
          <%= link_to t('auth.login'), new_user_session_path, class: "text-gray-700 hover:text-blue-600" %>
        <% end %>
      </div>
    </div>

    <!-- Mega Menu -->
    <%= render 'shared/mega_menu' %>
  </nav>
</header>

