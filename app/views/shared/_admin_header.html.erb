<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="bg-blue-600 text-white">
    <div class="container mx-auto px-4 py-2">
      <div class="flex items-center justify-between text-sm">
        <div class="flex items-center space-x-4">
          <span class="font-semibold"><%= t('admin.header.title', default: 'TARIN Admin Panel') %></span>
        </div>
        <div class="flex items-center space-x-4">
          <% if admin_user_signed_in? %>
            <!-- AdminUser (Active Admin) -->
            <span class="text-blue-100"><%= current_admin_user.email %></span>
            <span class="text-blue-300">|</span>
            <%= link_to root_path, class: "text-blue-100 hover:text-white transition-colors" do %>
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
              <%= t('admin.header.home', default: 'Về trang chủ') %>
            <% end %>
            <span class="text-blue-300">|</span>
            <%= button_to destroy_admin_user_session_path, method: :delete, class: "text-blue-100 hover:text-white transition-colors bg-transparent border-none cursor-pointer", form: { class: "inline" } do %>
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              <%= t('auth.logout') %>
            <% end %>
          <% elsif user_signed_in? && current_user.admin? %>
            <!-- User with admin role -->
            <span class="text-blue-100"><%= user_display_name(current_user) %></span>
            <span class="text-blue-300">|</span>
            <%= link_to root_path, class: "text-blue-100 hover:text-white transition-colors" do %>
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
              <%= t('admin.header.home', default: 'Về trang chủ') %>
            <% end %>
            <span class="text-blue-300">|</span>
            <%= link_to edit_user_registration_path, class: "text-blue-100 hover:text-white transition-colors" do %>
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <%= t('admin.header.profile', default: 'Hồ sơ') %>
            <% end %>
            <span class="text-blue-300">|</span>
            <%= button_to destroy_user_session_path, method: :delete, class: "text-blue-100 hover:text-white transition-colors bg-transparent border-none cursor-pointer", form: { class: "inline" } do %>
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              <%= t('auth.logout') %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Navigation -->
  <nav class="bg-white border-b border-gray-200">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between py-4">
        <!-- Logo -->
        <div class="flex-shrink-0">
          <%= link_to system_settings_menu_path, class: "flex items-center" do %>
            <%= image_tag "logo.jpg", alt: "TARIN", class: "logo-image h-10 w-auto mr-3" %>
            <span class="text-xl font-bold text-gray-900"><%= t('admin.header.system_settings', default: 'Cài đặt hệ thống') %></span>
          <% end %>
        </div>

        <!-- Navigation Links -->
        <div class="flex items-center space-x-6">
          <%= link_to system_settings_menu_path, class: "text-gray-700 hover:text-blue-600 font-medium transition-colors #{'text-blue-600 border-b-2 border-blue-600' if request.path == system_settings_menu_path}" do %>
            <%= t('admin.header.menu', default: 'Menu') %>
          <% end %>
          <%= link_to admin_root_path, class: "text-gray-700 hover:text-blue-600 font-medium transition-colors", target: "_blank" do %>
            <%= t('admin.header.active_admin', default: 'Active Admin') %>
            <svg class="w-4 h-4 inline ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>

