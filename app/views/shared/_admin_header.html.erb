<header class="bg-white shadow-md mb-8">
  <div class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-6">
        <%= link_to admin_root_path, class: "flex items-center" do %>
          <%= image_tag "logo.jpg", alt: "KDN Admin", class: "h-10 w-auto mr-2" %>
          <span class="text-2xl font-bold text-blue-600">KDN Admin</span>
        <% end %>
        <%= link_to "Trang chủ", root_path, class: "text-gray-700 hover:text-blue-600", target: "_blank" %>
      </div>
      <div class="flex items-center space-x-4">
        <% if admin_user_signed_in? %>
          <span class="text-gray-600">Xin chào, <%= current_admin_user.email %></span>
          <%= link_to "Đăng xuất", destroy_admin_user_session_path, method: :delete, class: "text-gray-700 hover:text-blue-600" %>
        <% elsif user_signed_in? %>
          <span class="text-gray-600">Xin chào, <%= current_user.email %></span>
          <%= link_to "Đăng xuất", destroy_user_session_path, method: :delete, class: "text-gray-700 hover:text-blue-600" %>
        <% end %>
      </div>
    </div>
  </div>
</header>

