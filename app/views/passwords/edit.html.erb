<div class="auth-page">
  <div class="auth-page-wrapper">
    <div class="auth-page-content">
      <div class="auth-card">
        <!-- Logo/Brand -->
        <div class="auth-brand text-center mb-4">
          <a href="<%= root_path %>" class="logo logo-dark">
            <%= image_tag "logo.jpg", alt: "TARIN", class: "logo-image", style: "max-height: 60px; width: auto;" %>
          </a>
        </div>

        <!-- Title -->
        <div class="text-center mb-4">
          <h4 class="auth-title"><%= t('profiles.edit_password_title', default: 'Đổi mật khẩu') %></h4>
          <p class="auth-subtitle"><%= t('profiles.edit_password_subtitle', default: 'Thay đổi mật khẩu của bạn để bảo mật tài khoản') %></p>
        </div>

        <!-- Alert Messages -->
        <% if alert.present? %>
          <div class="alert alert-danger mb-3" role="alert">
            <%= alert %>
          </div>
        <% end %>
        
        <% if notice.present? %>
          <div class="alert alert-success mb-3" role="alert">
            <%= notice %>
          </div>
        <% end %>

        <!-- Form -->
        <%= form_for(@user, url: update_password_path, html: { method: :patch, class: "auth-form" }) do |f| %>
          <%= render "users/shared/error_messages", resource: @user %>

          <div class="form-group mb-3">
            <%= f.label :current_password, t('form.current_password'), class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-lock-alert-outline"></i>
              </span>
              <%= f.password_field :current_password, 
                    autofocus: true,
                    autocomplete: "current-password",
                    placeholder: t('form.current_password_required', default: 'Cần mật khẩu hiện tại để xác nhận'),
                    class: "form-control" %>
            </div>
            <small class="form-text text-muted"><%= t('form.current_password_hint', default: 'Cần mật khẩu hiện tại để xác nhận thay đổi') %></small>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password, t('form.new_password', default: 'Mật khẩu mới'), class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-lock-outline"></i>
              </span>
              <%= f.password_field :password, 
                    autocomplete: "new-password",
                    class: "form-control" %>
            </div>
            <% if @minimum_password_length %>
              <small class="form-text text-muted"><%= t('form.password_min_length', min: @minimum_password_length) %></small>
            <% end %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password_confirmation, t('form.password_confirmation'), class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="mdi mdi-lock-check-outline"></i>
              </span>
              <%= f.password_field :password_confirmation, 
                    autocomplete: "new-password",
                    class: "form-control" %>
            </div>
          </div>

          <div class="form-group mb-3">
            <%= f.submit t('common.save'), class: "btn btn-primary w-100" %>
          </div>
        <% end %>

        <!-- Security Tip -->
        <div class="alert alert-info mb-3">
          <div class="d-flex align-items-start">
            <i class="mdi mdi-information-outline me-2"></i>
            <div>
              <strong><%= t('profiles.security_tip', default: 'Mẹo bảo mật') %></strong>
              <p class="mb-0 small"><%= t('profiles.security_tip_text', default: 'Sử dụng mật khẩu mạnh với ít nhất 8 ký tự, bao gồm chữ hoa, chữ thường, số và ký tự đặc biệt.') %></p>
            </div>
          </div>
        </div>

        <div class="text-center mt-4">
          <%= link_to t('common.back'), :back, class: "text-blue-600 hover:text-blue-800" %>
        </div>
      </div>
    </div>
  </div>
</div>

