<% content_for :title, t('system_settings.title') %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        <%= t('system_settings.title') %>
      </h1>
      <p class="text-gray-600">
        <%= t('system_settings.description') %>
      </p>
    </div>

    <!-- Settings Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Active Admin -->
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <div class="flex items-center mb-4">
          <div class="bg-blue-100 rounded-lg p-3 mr-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">
            <%= t('system_settings.active_admin.title') %>
          </h3>
        </div>
        <p class="text-gray-600 mb-4">
          <%= t('system_settings.active_admin.description') %>
        </p>
        <%= link_to admin_root_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium", target: "_blank" do %>
          <%= t('system_settings.active_admin.link') %>
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>

      <!-- User Management -->
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <div class="flex items-center mb-4">
          <div class="bg-green-100 rounded-lg p-3 mr-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">
            <%= t('system_settings.users.title') %>
          </h3>
        </div>
        <p class="text-gray-600 mb-4">
          <%= t('system_settings.users.description') %>
        </p>
        <%= link_to admin_users_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium", target: "_blank" do %>
          <%= t('system_settings.users.link') %>
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>

      <!-- Products Management -->
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <div class="flex items-center mb-4">
          <div class="bg-purple-100 rounded-lg p-3 mr-4">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">
            <%= t('system_settings.products.title') %>
          </h3>
        </div>
        <p class="text-gray-600 mb-4">
          <%= t('system_settings.products.description') %>
        </p>
        <%= link_to admin_products_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium", target: "_blank" do %>
          <%= t('system_settings.products.link') %>
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>

      <!-- Categories Management -->
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <div class="flex items-center mb-4">
          <div class="bg-yellow-100 rounded-lg p-3 mr-4">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">
            <%= t('system_settings.categories.title') %>
          </h3>
        </div>
        <p class="text-gray-600 mb-4">
          <%= t('system_settings.categories.description') %>
        </p>
        <%= link_to admin_categories_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium", target: "_blank" do %>
          <%= t('system_settings.categories.link') %>
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>

      <!-- Posts Management -->
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <div class="flex items-center mb-4">
          <div class="bg-red-100 rounded-lg p-3 mr-4">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">
            <%= t('system_settings.posts.title') %>
          </h3>
        </div>
        <p class="text-gray-600 mb-4">
          <%= t('system_settings.posts.description') %>
        </p>
        <%= link_to admin_posts_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium", target: "_blank" do %>
          <%= t('system_settings.posts.link') %>
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>

      <!-- Leads Management -->
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <div class="flex items-center mb-4">
          <div class="bg-indigo-100 rounded-lg p-3 mr-4">
            <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">
            <%= t('system_settings.leads.title') %>
          </h3>
        </div>
        <p class="text-gray-600 mb-4">
          <%= t('system_settings.leads.description') %>
        </p>
        <%= link_to admin_leads_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium", target: "_blank" do %>
          <%= t('system_settings.leads.link') %>
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-8 bg-gray-50 rounded-lg p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">
        <%= t('system_settings.quick_actions.title') %>
      </h2>
      <div class="flex flex-wrap gap-4">
        <%= link_to root_path, class: "inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          <%= t('system_settings.quick_actions.home') %>
        <% end %>
        <%= link_to edit_user_registration_path, class: "inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <%= t('system_settings.quick_actions.profile') %>
        <% end %>
      </div>
    </div>
  </div>
</div>

