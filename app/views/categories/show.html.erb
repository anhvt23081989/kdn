<div class="container mx-auto px-4 py-8">
  <nav class="mb-4 text-sm text-gray-600">
    <%= link_to "Trang chủ", root_path, class: "hover:text-blue-600" %> /
    <%= link_to "Danh mục", products_path, class: "hover:text-blue-600" %> /
    <span class="text-gray-900"><%= @category.name %></span>
  </nav>

  <div class="mb-8">
    <% if @category.cover_image.attached? %>
      <%= image_tag @category.cover_image, class: "w-full h-64 object-cover rounded-lg mb-4" %>
    <% end %>
    <h1 class="text-3xl font-bold mb-4"><%= @category.name %></h1>
    <% if @category.parent.present? %>
      <p class="text-gray-600">
        Danh mục cha: <%= link_to @category.parent.name, category_path(@category.parent.slug), 
            class: "hover:text-blue-600" %>
      </p>
    <% end %>
  </div>

  <!-- Subcategories -->
  <% if @subcategories.any? %>
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Danh mục con</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% @subcategories.each do |subcat| %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            <% if subcat.cover_image.attached? %>
              <%= link_to category_path(subcat.slug) do %>
                <%= image_tag subcat.cover_image, class: "w-full h-32 object-cover" %>
              <% end %>
            <% end %>
            <div class="p-4">
              <h3 class="font-semibold text-lg">
                <%= link_to subcat.name, category_path(subcat.slug), class: "hover:text-blue-600" %>
              </h3>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>

  <!-- Products -->
  <section>
    <h2 class="text-2xl font-semibold mb-6">Sản phẩm</h2>
    <% if @products.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @products.each do |product| %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            <% if product.images.attached? %>
              <%= link_to product_path(product.slug) do %>
                <%= image_tag product.images.first, class: "w-full h-48 object-cover" %>
              <% end %>
            <% end %>
            <div class="p-4">
              <h3 class="font-semibold text-lg mb-2">
                <%= link_to product.name, product_path(product.slug), class: "hover:text-blue-600" %>
              </h3>
              <% if product.sku.present? %>
                <p class="text-gray-500 text-xs">SKU: <%= product.sku %></p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <% if @pagy.pages > 1 %>
        <div class="mt-8 flex justify-center">
          <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      <% end %>
    <% else %>
      <p class="text-gray-600">Không có sản phẩm nào trong danh mục này.</p>
    <% end %>
  </section>
</div>

